{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DucklingScript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#specialoperators"
		},
		{
			"include": "#evaluated"
		},
		{
			"include": "#force-evaluated"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#default"
		}
	],
	"repository": {
		"evaluated": {
			"name": "keyword.control.dkls",
			"match": "(IF|ELIF|ELSE|VAR)"
		},
		"force-evaluated": {
			"include": "#numbers #default",
			"match": "\\$ *.*"
		},
		"keywords": {
			"name": "keyword.control.dkls",
			"match": "\\b(ALT|ALTCHAR|ALTCODE|ALTSTRING|BREAKLOOP|BREAK_LOOP|CONTINUELOOP|CONTINUE_LOOP|CTRL|DEFAULTDELAY|DEFAULT_DELAY|DEFAULTDELAY|DELAY|ENTER|EXIST|EXTENDED|FUNC|FUNCTION|GUI|WINDOWS|META|IGNORE|MENU|NOTEXIST|NOT_EXIST|PASS|PRINT|REPEAT|FOR|RETURN|RET|RUN|SHIFT|START|STARTENV|STARTCODE|STRINGLN|STRING|SYSRQ|WHILE|WHITESPACE)\\b *(.*)",
			"ends": "(\\n|\\r)",
			"captures": {
				"2": {
					"name": "string.quoted.double.dkls"
				}
			}
		},
		"specialoperators": {
			"name": "keyword.operator.new",
			"match": "(\\$|,|\\+|-|\\*|/|%|=|==)"
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "[0-9]+"
		},
		"comments": {
			"name": "comment.line",
			"match": "REM .*+"
		},
		"strings": {
			"name": "string.quoted.double.dkls",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dkls",
					"match": "\\\\."
				}
			]
		},
		"default": {
			"name": "support.type.property-name",
			"match": "[A-Za-z]"
		}
	},
	"scopeName": "source.ducklingscript"
}