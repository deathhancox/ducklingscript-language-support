{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DucklingScript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#specialoperators"
		},
		{
			"include": "#controlwords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"controlwords": {
			"name": "keyword.control.dkls",
			"match": "\\b(IF|ELIF|ELSE|REPEAT|FOR|WHILE) [A-Za-z]+\\b",
			"captures": {
				"1":{
					"name": "support.type.property-name"
				}
			}
		},
		"specialoperators": {
			"name": "support.type.property-name",
			"match": "\\b\\$.*\\b"
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "\\b[0-9+]\\b"
		},
		"comments": {
			"name": "comment.line",
			"begin": "\\b^REM\\b",
			"end": "\\b.*$\\b"
		},
		"strings": {
			"name": "string.quoted.double.dkls",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dkls",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ducklingscript"
}