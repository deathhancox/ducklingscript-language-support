{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DucklingScript",
	"scopeName": "source.ducklingscript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#simple-commands"
		},
		{
			"include": "#block-commands"
		},
		{
			"include": "#force-evaluated"
		},
		{
			"include": "#string-evaluation"
		},
		{
			"include": "#unevaluated"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.block.dkls",
			"begin": "^(\\s*)REM\\b",
			"end": "^(?!\\1\\s)(?!\\s*$)"
		},
		"block-commands": {
			"name": "keyword.control.dkls",
			"begin": "\\b(IF|ELIF|ELSE|VAR|ALTCHAR|ALTCODE|DEFAULTDELAY|DEFAULT_DELAY|DEFAULT_STRING_DELAY|DEFAULTSTRINGDELAY|DELAY|NOTEXIST|NOT_EXIST|REPEAT|FOR|WHILE|WHITESPACE|FUNC|FUNCTION)\\b",
			"end": "$",
			"patterns": [
				{"include": "#numbers"},
				{"include": "#properties"},
				{"include": "#operators"}
			]
		},
		"simple-commands": {
			"name": "keyword.control.dkls",
			"begin": "^(\\s*)(CTRL-ALT|CTRL-SHIFT|CTRL|ALTSTRING|ALT-SHIFT|ALT-GUI|ALT|GUI-SHIFT|EXIST|IGNORE|RUN|SHIFT|START|STARTENV|STARTCODE)\\b",
			"end": "^(?!\\1\\s)(?!\\s*$)",
			"patterns": [
				{"include": "#numbers"},
				{"include": "#strings"},
				{"include": "#operators"}
			]
		},
		"force-evaluated": {
			"name": "keyword.operator.new.dkls",
			"begin": "^(\\s*)\\$",
			"end": "^(?!\\1\\s)(?!\\s*$)",
			"patterns": [
				{
					"name": "keyword.control.dkls",
					"match": "(BREAKLOOP|BREAK_LOOP|CONTINUELOOP|CONTINUE_LOOP|ENTER|GUI|WINDOWS|META|MENU|PASS|RETURN|RET|STRINGLN|STRING|SYSRQ)\\b"
				},
				{"include": "#numbers"},
				{"include": "#strings"},
				{"include": "#operators"}
			]
		},
		"string-evaluation": {
			"name": "keyword.control.dkls",
			"begin": "^(\\s*)(STRINGLN|STRING)\\b",
			"end": "^(?!\\1\\s)(?!\\s*$)",
			"patterns": [
				{"include": "#strings"}
			]
		},
		"unevaluated": {
			"name": "keyword.control.dkls",
			"match": "(BREAKLOOP|BREAK_LOOP|CONTINUELOOP|CONTINUE_LOOP|ENTER|GUI|WINDOWS|META|MENU|PASS|RETURN|RET|SYSRQ|UP|DOWN|LEFT|RIGHT|UPARROW|DOWNARROW|LEFTARROW|RIGHTARROW)\\b"
		},
		"strings": {
			"name": "string.quoted.double.dkls",
			"match": "."
		},
		"numbers": {
			"name": "constant.numeric.dkls",
			"match": "[0-9]+"
		},
		"properties": {
			"name": "support.type.property-name.dkls",
			"match": "[A-Za-z]"
		},
		"operators": {
			"name": "keyword.operator.new.dkls",
			"match": "(\\+|-|\\*|/|%|=|==)"
		},
		"qouted-strings": {
			"name": "string.quoted.double.dkls",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dkls",
					"match": "\\\\."
				}
			]
		}
	}
}