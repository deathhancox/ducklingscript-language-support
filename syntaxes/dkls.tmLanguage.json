{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DucklingScript",
	"scopeName": "source.ducklingscript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#block-commands"
		},
		{
			"include": "#force-evaluated"
		},
		{
			"include": "#property-evaluation"
		},
		{
			"include": "#string-evaluation"
		},
		{
			"include": "#unevaluated"
		},
		{
			"include": "#simple-commands"
		},
		{
			"include": "#other-commands"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.block.dkls",
			"begin": "^(\\s*)REM\\b",
			"end": "^(?!\\1\\s)(?!\\s*$)"
		},
		"force-evaluated": {
			"name": "keyword.operator.new.dkls",
			"begin": "(\\s*)\\$",
			"end": "^(?!\\1\\s)(?!\\s*$)",
			"patterns": [
				{
					"name": "keyword.control.dkls",
					"match": "[A-Z]+\\b"
				},
				{"include": "#numbers"},
				{"include": "#operators"},
				{"include": "#properties"},
				{"include": "#quoted-strings"}
			]
		},
		"block-commands": {
			"name": "keyword.control.dkls",
			"begin": "\\b(IF|ELIF|ELSE|VAR|REPEAT|FOR|WHILE|FUNCTION|FUNC)\\b",
			"end": "$",
			"patterns": [
				{"include": "#numbers"},
				{"include": "#properties"},
				{"include": "#operators"}
			]
		},
		"property-evaluation": {
			"name": "keyword.control.dkls",
			"begin": "^(\\s*)(RUN)\\b",
			"end": "^(?!\\1\\s)(?!\\s*$)",
			"patterns": [
				{"include": "#properties"}
			]
		},
		"string-evaluation": {
			"name": "keyword.control.dkls",
			"begin": "^(\\s*)(STRINGLN|STRING)\\b",
			"end": "^(?!\\1\\s)(?!\\s*$)",
			"patterns": [
				{"include": "#strings"}
			]
		},
		"unevaluated": {
			"name": "keyword.control.dkls",
			"match": "(BREAKLOOP|BREAK_LOOP|CONTINUELOOP|CONTINUE_LOOP|CONTINUE|ENTER|GUI|WINDOWS|META|MENU|PASS|RETURN|RET|SYSRQ|UP|DOWN|LEFT|RIGHT|UPARROW|DOWNARROW|LEFTARROW|RIGHTARROW)\\b"
		},
		"simple-commands": {
			"name": "keyword.control.dkls",
			"begin": "^(\\s*)(CTRL-ALT|CTRL-SHIFT|CTRL|ALTSTRING|ALT-SHIFT|ALT-GUI|ALT|GUI-SHIFT|GUI|WINDOWS|META|EXIST|IGNORE|SHIFT|START|STARTENV|STARTCODE|ALTCHAR|ALTCODE|DEFAULTSTRINGDELAY|DEFAULTSTRINGDELAY|DEFAULTDELAY|DEFAULT_DELAY|DELAY|NOTEXIST|NOT_EXIST|WHITESPACE)\\b",
			"end": "^(?!\\1\\s)(?!\\s*$)",
			"patterns": [
				{"include": "#numbers"},
				{"include": "#operators"},
				{"include": "#properties"},
				{"include": "#strings"}
			]
		},
		"other-commands": {
			"name": "keyword.control.dkls",
			"begin": "^(\\s*)[A-Z]+\\b",
			"end": "^(?!\\1\\s)(?!\\s*$)",
			"patterns": [
				{"include": "#strings"}
			]
		},
		"strings": {
			"name": "string.quoted.double.dkls",
			"match": "."
		},
		"numbers": {
			"name": "constant.numeric.dkls",
			"match": "[0-9]+"
		},
		"properties": {
			"name": "support.type.property-name.dkls",
			"match": "[A-Za-z0-9_]"
		},
		"operators": {
			"name": "keyword.operator.new.dkls",
			"match": "(\\+|-|\\*|/|%|=|==|\\,)"
		},
		"quoted-strings": {
			"name": "string.quoted.double.dkls",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dkls",
					"match": "\\\\."
				}
			]
		}
	}
}