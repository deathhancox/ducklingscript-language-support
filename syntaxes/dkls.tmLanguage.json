{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DucklingScript",
	"patterns": [
		{
			"include": "#block-comments"
		},
		{
			"include": "#line-comments"
		},
		{
			"include": "#specialoperators"
		},
		{
			"include": "#evaluated"
		},
		{
			"include": "#force-evaluated"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "stringblocks"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#default"
		}
	],
	"repository": {
		"evaluated": {
			"name": "keyword.control.dkls",
			"match": "\\b(IF|ELIF|ELSE|VAR|ALTCHAR|ALTCODE|DEFAULTDELAY|DEFAULT_DELAY|DELAY|NOTEXIST|NOT_EXIST|REPEAT|FOR|RUN|SHIFT|START|STARTENV|STARTCODE|WHILE|WHITESPACE)\\b"
		},
		"force-evaluated": {
			"include": "#numbers #default",
			"match": "\\$ *.*"
		},
		"keywords": {
			"name": "keyword.control.dkls",
			"match": "\\b(ALT|ALTSTRING|BREAKLOOP|BREAK_LOOP|CONTINUELOOP|CONTINUE_LOOP|CTRL|ENTER|EXIST|FUNC|FUNCTION|GUI|WINDOWS|META|IGNORE|MENU|PASS|PRINT|RETURN|RET|STRINGLN|STRING|SYSRQ)\\b *(.*)",
			"ends": "(\\n|\\r)",
			"captures": {
				"2": {
					"name": "string.quoted.double.dkls"
				}
			}
		},
		"stringblocks": {
			"name": "string.quoted.double.dkls"
		},
		"specialoperators": {
			"name": "keyword.operator.new",
			"match": "(\\$|,|\\+|-|\\*|/|%|=|==)"
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "[0-9]+"
		},
		"block-comments": {
			"name": "comment.block",
			"begin": "^(\\s*)REM\\s+.*(\\n|\\r)",
			"end": "^\\1(?=\\S)"
		},
		"line-comments": {
			"name": "comment.line",
			"match": "^REM\\b.*"
		},
		"strings": {
			"name": "string.quoted.double.dkls",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dkls",
					"match": "\\\\."
				}
			]
		},
		"default": {
			"name": "support.type.property-name",
			"match": "[A-Za-z]"
		}
	},
	"scopeName": "source.ducklingscript"
}